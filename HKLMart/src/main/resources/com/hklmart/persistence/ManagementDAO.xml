<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hklmart.persistence.ManagementDAO">

<!-- getProductList -->
	<select id="getProductList" resultType="com.hklmart.domain.ProductListDTO" >
	<![CDATA[
	select * from product
	]]>
	</select>
	
	<select id="getAskBoardList" resultType="com.hklmart.domain.BoardAskVO">
	<![CDATA[
	select * from board_ask
	]]>
	</select>
	
	<select id="getBoardReviewList" resultType="com.hklmart.domain.BoardReviewListVO">
	<![CDATA[
	select r.board_review_number,r.board_review_member_id, p.product_name,r.board_review_score,r.board_review_date
	from product p, board_review r
	where r.board_review_product_code = p.product_code
	]]>
	</select>
	
</mapper>