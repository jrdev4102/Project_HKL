<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hklmart.persistence.MemberDAO">

	<insert id="registMember">
		<![CDATA[
			INSERT INTO MEMBER VALUES (#{memberId}, #{memberPw}, #{memberName}, #{memberEmail}, #{memberTel}, #{memberAuthorities})
		]]>
	</insert>
	
	<select id="getMemberInfo" parameterType="java.lang.String" resultType="com.hklmart.domain.MemberVO">
		<![CDATA[
			SELECT /*+ INDEX_ASC(MEMBER MEMBER_PK_MEMBER_ID) */ * FROM MEMBER WHERE MEMBER_ID = #{param} 
		]]>
	</select>
	
	<select id="idDuplicatiedInspection" parameterType="String" resultType="Integer">
      SELECT COUNT(*) FROM member
      WHERE member_Id = #{userId}
	</select>
	
	
</mapper>